@page
@model SchoolManagement.Pages.Users.AddModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add new user</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="User.Name"></label>
        <input asp-for="User.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Login"></label>
        <input asp-for="User.Login" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.UserType"></label>
        <select class="form-control" asp-for="User.UserType" asp-items="Model.UserTypes">
        </select>
    </div>

    <div style="text-align: right">
        <a class="btn btn-secondary" asp-page="./List">Back</a>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>

